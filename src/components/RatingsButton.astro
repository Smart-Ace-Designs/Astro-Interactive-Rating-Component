---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"button"> {
  classes?: string;
}

const { classes, ...rest } = Astro.props;
---

<button
  aria-label={`Rating ${rest.id}`}
  class:list={[
    "h-10 w-10 rounded-full bg-theme-light-gray/10 text-sm font-bold text-theme-light-gray transition-colors duration-500 hover:cursor-pointer hover:bg-theme-white hover:text-theme-very-dark-blue md:h-13 md:w-13",
    classes,
  ]}
  {...rest}
>
  <slot />
</button>
